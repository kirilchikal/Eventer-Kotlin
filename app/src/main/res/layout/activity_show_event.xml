<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_show_event"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/purple"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-139dp" />

    <TextView
        android:id="@+id/title_event"
        android:layout_width="196dp"
        android:layout_height="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="Birthday Party"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tb_show_event"
        app:layout_constraintEnd_toEndOf="@+id/tb_show_event"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="@+id/tb_show_event"
        app:layout_constraintTop_toTopOf="@+id/tb_show_event"
        app:layout_constraintVertical_bias="0.266" />

    <TextView
        android:id="@+id/date_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="13/01/2022"
        android:textColor="@color/white"
        android:textSize="11dp"
        android:letterSpacing="0.01"
        app:layout_constraintBottom_toBottomOf="@+id/tb_show_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.246"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_event"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/place_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_place_24"
        android:gravity="center"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/tb_show_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.212"
        app:layout_constraintStart_toStartOf="@+id/tb_show_event"
        app:layout_constraintTop_toBottomOf="@+id/date_event"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Members"
        app:strokeWidth="1.5dp"
        app:icon="@drawable/ic_baseline_people_24"
        app:layout_constraintBottom_toBottomOf="@+id/tb_show_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="@+id/tb_show_event"
        app:strokeColor="@color/white"
        tools:ignore="MissingConstraints" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="418dp"
        android:layout_height="645dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_show_event" />


</androidx.constraintlayout.widget.ConstraintLayout>